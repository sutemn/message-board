<%= form_for(@message) do |f| %>
  <% if @message.errors.present? %>
    <div class="alert alert-danger">
      <%= alert %>
      <ul>
        <% @message.errors.full_messages.each do |full_message| %>
          <li>
            <%= full_message %>
          </li>
        <% end %> 
      </ul>
    </div>
  <% end %>
  
<form class="form-horizontal">
  <div class="form-group">
  <div class="col-xs-2">
  <label for="inputName">名前:</label>
    <%= f.text_field :name, class: "form-control", placeholder: "名前", id: "inputName" %>
  </div>
  <div class="col-xs-3">
  <label for="inputContent">内容:</label>
      <%= f.text_area :body, rows: "3", class: "form-control", placeholder: "内容", id: "inputContent" %>
  </div>
  <br>
  <%= f.submit class: "btn btn-lg btn-success" %>
  </div>
</form>
<% end %>
